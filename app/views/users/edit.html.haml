.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title 
          User Picture
      .panel-body
        .row
          .col-md-12
            .col-md-2
              %h4 Actual
              %a.thumbnail{:href => edit_user_path(current_user), data: { modal: true }}
                - if current_user.picture.present?
                  %img.img-circle{:alt => "...", :src =>"#{current_user.picture_url}"}
                - else  
                  %img.img-circle{:alt => "...", :src => "http://placehold.it/150x150"} 
            %form.form-horizontal{:role => "form"}
            .col-md-6
              %br
              %br
              = simple_form_for(@user, html: { class: 'form-horizontal' }) do |f|
                .form-inputs
                  .fileinput.fileinput-new{"data-provides" => "fileinput"}
                    .fileinput-preview.thumbnail{"data-trigger" => "fileinput", :style => "width: 200px; height: 150px;"}
                    %div
                      %span.btn.btn-default.btn-file
                        %span.fileinput-new Seleccionar imagen
                        %span.fileinput-exists Cambiar
                        =f.file_field :picture
                      %a.btn.btn-default.fileinput-exists{"data-dismiss" => "fileinput", :href => "#"} Limpiar  
                  .form-group
                    .col-sm-offset-2.col-sm-10
                      .pull-right
                        %button.btn.btn-success{:type => "submit"} Guardar
          