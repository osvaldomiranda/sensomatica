.bkg-blue
  .container
    .row
      .col-md-12.text-center
        %h1.page-header AtacamaScope
        %br
        %br
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            %h3.panel-title Login
          .panel-body
            = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
              .form-inputs
                %fieldset
                  .form-group
                    = f.input :email, :required => false, :autofocus => true, input_html: { class: 'form-control' }
                  .form-group
                    = f.input :password, :required => false, input_html: { class: 'form-control' }
              .form-actions
                = f.button :submit, "Login", class: 'btn btn_pill_small btn-block'
            
            %br
