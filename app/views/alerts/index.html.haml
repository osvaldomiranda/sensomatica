%h1 Listing alerts

%table
  %thead
    %tr
      %th User
      %th Title
      %th Body
      %th
      %th
      %th

  %tbody
    - @alerts.each do |alert|
      %tr
        %td= alert.user
        %td= alert.title
        %td= alert.body
        %td= link_to 'Show', alert
        %td= link_to 'Edit', edit_alert_path(alert)
        %td= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' }

