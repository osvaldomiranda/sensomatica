.top-background {
  color: white;
  background: url(<%= asset_path "huerto.png" %>) no-repeat center fixed ;
  width: 100%;
  height: 400px;
  position: relative;
  top: 0;
}

.banner-background {
  background: url(<%= asset_path "banner.jpg" %>) no-repeat top ;
  height: 400px;
  position: relative;
  top: 0;
}

.carousel-container{
  height: 450px;   
}


.thumbnail {
  background-color: #265EA5;
}

.signin {
  background-color: white !important;
}


.iframe {
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
}

.btn_landing {
  background-color: rgba(255, 255, 255, 0.6);
  border: 1px solid #428bca;
  color: #428bca;
  margin-left: 10px;
  padding: 3px 20px;
}

.btn_landing:hover {
  color: white;
  background-color: #428bca;
}

.btn_pill {
  background-color:  rgba(0, 0, 155, 0.6);
  border: 4px solid white;
  color: white;
  border-radius: 30px;
  padding: 15px 55px;
  min-width: 150px;
  font-size: 17px;
}

.btn_pill:hover {
  color: white;
  border-color: white;
  background-color: #428bca;
}

.btn_pill_small {
  background-color: #FF8C00;
  border: 1px solid white;
  color: white;
  border-radius: 30px;
  padding: 5px 30px;
  min-width: 100px;
  font-size: 14px;
}

.btn_pill_small:hover {
  color: white;
  border-color: white;
  background-color: rgba(0, 0, 155, 0.6);
}

.margin_both {
  margin: 0 10px;
}

.topbar {
  padding: 15px 0;
  position: relative;
  background-color: rgba(0, 0, 0, 0.1);
